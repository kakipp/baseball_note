<%= render "histories/header"%>
  <%= form_with model: @user, url: user_registration_path, id: 'user-main', class: 'user-main', local: true do |f| %>
    <div class="form-top">
      <h1 class="new-form">＜新規登録＞</h1>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"input-default", id:"nickname", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">所属</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:affiliation_id, Affiliation.all, :id, :name, {}, {class:"select-box", id:"affiliatation"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">所属チーム名</label>
        <span class="required">任意</span>
      </div>
      <%= f.text_area :affiliation_team, class:"input-default", maxlength:"40"%>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">所属</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {class:"select-box", id:"position"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">自己紹介</label>
      </div>
      <%= f.text_area :introduction, class:"input-text"%>
    </div>
    <div class="action-btn">
        <%= f.submit "登録",class:"btn-text" %>
    </div>
    <div class="footer">
    </div>
  <% end %>
    
  